{
  "manifest_version": 3,
  "name": "Browser Console",
  "version": "1.0",
  "description": "A browser sidebar extension that mimics a command prompt, capable of executing native commands.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Open Browser Console"
  }
}